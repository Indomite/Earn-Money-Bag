.my_resume{
    position: relative;
    z-index: 0;
    padding: 20rpx 1rem;
    font-size: 1rem;
}

/* 每个信息的样式 */
.message_item {
    display: flex;
    flex-direction: column;
    padding: 0.5rem 0;
    border-bottom: 2.5rpx solid rgba(204, 204, 204, 0.544);
}

.message_desc {
    font-size: 0.9rem;
}

.message_input_box {
    margin-top: 0.375rem;
}

.message_input_box input {
    font-size: 1rem;
}

.resume_headimage_box,  .resume_gender_box{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.resume_headimage image{
    width: 120rpx;
    height: 120rpx;
    background: #ccc;
    border-radius: 50%;
}


.resume_headimage_desc view {
    font-size: 1rem;
}

.resume_headimage_desc text {
    font-size: 0.75rem;
}

/* 姓名 */

.resume_footer {
    margin-top: 3rem;
}

.my_resume .resume_footer>button{
    width: 100%;
    background: var(--themeColor);
    cursor: pointer;
}

/* 弹窗 */
.city_pop_up {
    padding: 1rem;
    background-color: white;
}

.city_pop_up_box {
    display: flex;
    z-index: 1;
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    padding: 1rem;
    /* background-color: rgba(0, 0, 0, 0.322); */
}

.city_name_att {
    color: rgb(152, 101, 247);
    /* font-size: 0.8rem; */
}

.seach_city_like_att {
    padding-top: 0.5rem;
    margin-top: 0.25rem;
    border-top: 2.5rpx solid #ccc;
    /* color: rgb(152, 101, 247); */
    font-size: 0.8rem;
}

.city_name {
    font-size: 1rem;
}
