.message {
  padding: 0 0.5rem;
}

.message_box {
  position: relative;
  display: flex;
  align-items: center;
  padding: 0.5rem;
  border-bottom: 2rpx solid #ccc;
}

.friend_image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 1rem;
}

.friend_name {
  margin-bottom: 0.5rem;
}

.delete_message {
  position: absolute;
  /* right: 0.5rem; */
  right: 0;
  top: 50%;
  transform: translate(0, -50%);
  width: 60rpx;
  height: 60rpx;
}