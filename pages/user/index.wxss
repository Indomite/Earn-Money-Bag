.user{

}

.user_login{
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 260rpx;
    padding: 0 1.5rem;
    background: var(--themeColor);
}

.user_login image{
    width: 120rpx;
    height: 120rpx;
    /* margin-left: 80rpx; */
    background: #ccc;
    border-radius: 50%;
}

.user_name{
    font-size: 1.5rem;
}

.user_att{
    font-size: 1rem;
}

.user_box{
    padding: 0 1.5rem;
}

.box_item{
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100rpx;
    
}

.box_item:nth-child(1){
    border-bottom: 1rpx solid #ccc;
}

.box_item>text{
    font-size: 0.875rem;
    line-height: 100rpx;
}

.box_item::after{
    display: inline-block;
    content: ">";
    font-size: 1.25rem;
    color: #CCC;
}

.user .login_out{
    position: absolute;
    width: 100%;
    box-sizing: border-box;
    padding: 0 1.5rem;
    bottom: 1.5rem;
}

.user .login_out>button {
    width: 100%;
    background: var(--themeColor);
}

.pop_up {
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(0, 0, 0, 0.8);
}

.form {
    position: relative;
    padding: 2rem;
    background-color: white;
}

.title {
    text-align: center;
    font-size: 1rem;
    font-weight: 800;
    margin: 0 0 1rem;
}

.form>button {
    width: 500rpx !important;
    background: var(--themeColor);
    color: white;
    cursor: pointer;
}

.pop_up_close {
    position: absolute;
    right: 0.5rem;
    top: 0.5rem;
    width: 1.5rem;
    height: 1.5rem;
}

.pop_up_close::after, .pop_up_close::before {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    content: "";
    width: 1.5rem;
    height: 5rpx;
    background-color: black;
}

.pop_up_close::after {
    transform: translate(-50%, -50%) rotate(45deg);
}

.pop_up_close::before {
    transform: translate(-50%, -50%) rotate(-45deg);
}